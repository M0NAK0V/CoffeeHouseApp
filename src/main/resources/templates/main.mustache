{{>layout/header}}
{{>layout/nav}}
<div class="container col-md-4">
        <div class="input-group mb-3">
            <input class="form-control" type="text" id="search" placeholder="Пожалуйста введите критерий поиска."/>
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="btn-searchCoffee">
                    Поиск</button>
            </div>
        </div>
</div>
<div>
    {{#master}}
        <a class="btn btn-outline-secondary float-right mr-4" href="/coffees/coffeesave">Регистрация кофе</a>
    {{/master}}
    {{^master}}
    {{/master}}
</div>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#coffeeInfo}}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-text">{{coffeeName}}</h4>
                            <small class="card-text">{{coffeeAuthor}}</small>
                        </div>
                        <div class="mb-2 d-flex align-items-center flex-row-reverse">
                            <h5 class="card-text mr-2 float-right">
                                {{coffeePrice}}р
                            </h5>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" onclick="location.href='coffees/coffeedetail?uid={{uid}}'" class="btn btn-sm btn-outline-secondary">
                                Посмотреть детали</button>
                                <button type="button" onclick="location.href='coffees/coffeeupdate?uid={{uid}}'" class="btn btn-sm btn-outline-secondary">
                                Изменить</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/coffeeInfo}}
        </div>
    </div>
</div>
{{>layout/footer}}