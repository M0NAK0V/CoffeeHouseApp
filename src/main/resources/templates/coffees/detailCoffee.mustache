{{>layout/header}}
{{>layout/nav}}
<script src="/js/app/detailCoffee.js"></script>

{{#coffeeInfo}}
{{#master}}
    <div class="d-flex justify-content-end col-md-11">
        <button type="button" id="btn-coffeesDelete" class="btn btn-lg btn-secondary">
            Удалить</button>
    </div>
{{/master}}
{{^master}}
{{/master}}
<main role="main" class="container">
    <div class="row">
        <div class="col-md-8 blog-main">
            <h3 class="pb-3 mb-4 border-bottom">Информация о кофе</h3>
            <div class="blog-post">
                <h2 class="blog-post-title">{{coffeeName}}</h2>
                <div class="ml-1 row d-flex justify-content-between">
                    <p class="blog-post-meta"><strong>
                        Производитель</strong> : {{coffeeAuthor}}</p>
                    <p class="blog-post-meta"><strong>
                        Точка продажи</strong> : {{coffeePublish}}</p>
                </div>

                <div class="d-flex justify-content-end">
                    <h4 id="coffee_Price">{{coffeePrice}}</h4><h3>р</h3>
                </div>
                <hr>
                <p>
                    {{coffeeDetail}}
                </p>
            </div>
        </div>
        <aside class="col-md-4 blog-sidebar">
            <div class="p-3 mb-3 bg-light rounded">
                <h4 class="mb-2">Заказать</h4>
                <hr>
                <form>
                    <div class="mb-2 row d-flex justify-content-end">
                        <input type="number" id="count" value="1" min="1" max="{{coffeeCount}}"/>
                        <h4>шт.</h4>
                    </div>
                    <div id="total" class="row d-flex flex-row-reverse">
                        <h4>р</h4>
                    </div>
                </form>
                {{#existSession}}
                    <div class="btn-group-lg-vertical">
                        <button class="btn btn-outline-secondary btn-lg btn-block" disabled id="btn-addCart">Добавить в корзину</button>
                        <button class="btn btn-outline-secondary btn-lg btn-block" disabled>Добавить в корзину</button>
                    </div>
                {{/existSession}}
                {{^existSession}}
                    <div class="btn-group-lg-vertical">
                        <button class="btn btn-outline-secondary btn-lg btn-block" id="btn-addCart">Добавить в корзину</button>
                        <button class="btn btn-outline-secondary btn-lg btn-block" onclick=orderBtn()>Заказ</button>
                    </div>
                {{/existSession}}
            </div>
        </aside>
    </div>
    {{/coffeeInfo}}
</main>
{{>layout/footer}}