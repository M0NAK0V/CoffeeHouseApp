{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="col-md-10">
        <h1>
            Модификация кофе</h1>
        <div class="col-md-10">
            {{#coffeeInfo}}
                <form method="post">
                    <div class="form-group">
                        <label for="coffee_name">Название кофе</label>
                        <input type="text" class="form-control" id="coffee_name" value="{{coffeeName}}" placeholder="Пожалуйста, введите название кофе">
                    </div>
                    <div class="form-group">
                        <label for="coffee_author">
                            Производитель</label>
                        <input type="text" class="form-control" id="coffee_author" value="{{coffeeAuthor}}" placeholder="
Пожалуйста, введите производителя">
                    </div>
                    <div class="form-group">
                        <label for="coffee_publish">Точка продажи</label>
                        <input type="text" class="form-control" id="coffee_publish" value="{{coffeePublish}}" placeholder="
Пожалуйста, введите точку продажи">
                    </div>
                    <div class="form-group">
                        <label for="coffee_price">
                            цена</label>
                        <input type="text" class="form-control" id="coffee_price" value="{{coffeePrice}}" placeholder="Пожалуйста, введите цену">
                    </div>
                    <div class="form-group">
                        <label for="coffee_count">
                            Количество</label>
                        <input type="text" class="form-control" id="coffee_count" value="{{coffeeCount}}" placeholder="Пожалуйста, введите количество">
                    </div>
                    <div class="form-group">
                        <label for="coffee_detail">
                            Больше информации</label>
                        <textarea class="form-control" id="coffee_detail" placeholder="Пожалуйста, введите ваши данные">{{coffeeDetail}}</textarea>
                    </div>
                </form>
                <a href="/" role="button" class="btn btn-outline-danger">
                    отменить</a>
                <button type="button" class="btn btn-outline-secondary" id="btn-coffeesUpdate">Изменения завершены</button>
            {{/coffeeInfo}}
        </div>
    </div>
</div>
{{>layout/footer}}