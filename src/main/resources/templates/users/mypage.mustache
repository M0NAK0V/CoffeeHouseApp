{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="col-md-12">
        <h1 class="mb-4">{{userid}} добро пожаловать.</h1>
        <div class="row">
            <div class="col-md-6" id="cardDiv">
                <h2>
                    Список карт</h2>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>Карточная компания</th>
                        <th>Номер карты</th>
                        <th>Срок действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#cardInfo}}
                        <tr>
                            <td>{{type}}</td>
                            <td>{{id}}</td>
                            <td>{{datetime}}</td>
                            <form method="post" action="/users/deleteCard/{{id}}">
                                <td><input type="submit" class="btn btn-outline-danger" value="Удалить"/></td>
                            </form>
                        </tr>
                    {{/cardInfo}}
                    </tbody>
                </table>
                <p><a class="btn btn-outline-secondary" id="btn-cardadd" role="button">Добавить карту »</a></p>
                <div id="container-card"></div>
            </div>
            <div class="col-md-6" id="shipDiv">
                <h2>
                    Список направлений доставки</h2>
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th>
                            Индекс</th>
                        <th>
                            Базовый адрес</th>
                        <th>Подробный адрес</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#addrInfo}}
                        <tr>
                            <td>{{shippingNum}}</td>
                            <td>{{basicAddr}}</td>
                            <td>{{detailAddr}}</td>
                            <form method="post" action="/users/deleteAddr/{{uid}}">
                                <td><input type="submit" class="btn btn-outline-danger" value="Удалить"/></td>
                            </form>
                        </tr>
                    {{/addrInfo}}
                    </tbody>
                </table>
                <p><a class="btn btn-outline-secondary" id="btn-shipadd" role="button">Добавить адрес доставки »</a></p>
                <div id="container-addr"></div>
            </div>
        </div>
        <table class="table table-hover table-bordered text-center">
            <thead>
                <th>Дата заказа</th>
                <th>Назначение</th>
                <th>Цена</th>
            </thead>
            <tbody>
                {{#orderInfo}}
                <tr>
                    <td>{{orderDate}}</td>
                    <td>{{address}}</td>
                    <td>{{price}}</td>
                </tr>
                {{/orderInfo}}
            </tbody>
        </table>
    </div>
</div>
{{>layout/footer}}