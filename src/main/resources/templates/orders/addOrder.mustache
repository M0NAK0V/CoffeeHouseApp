{{>layout/header}}
{{>layout/nav}}
<script src="/js/app/addOrder.js"></script>
<script>
    totalPrice = {{coffeeInfo.coffeePrice}}*{{count}};
</script>

<div class="container">
    <div class="d-flex justify-content-center mb-5">
        <h4>Заказ</h4>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div>
                <div class="row">
                    <div class="col-md-4 d-flex justify-content-center">
                    Название кофе
                    </div>
                    <div class="col-md-2 d-flex justify-content-center">
                    Производитель
                    </div>
                    <div class="col-md-2 d-flex justify-content-center">
                    Цена
                    </div>
                    <div class="col-md-2 d-flex justify-content-center">
                    Количество
                    </div> 
                    <div class="col-md-2 d-flex justify-content-center">
                    Сумма
                    </div>
                </div>
                <hr>
                {{#coffeeInfo}}
                <div class="row">
                    <div class="col-md-4 d-flex justify-content-center">
                    {{coffeeName}}
                    </div>
                    <div class="col-md-2 d-flex justify-content-center">
                    {{coffeeAuthor}}
                    </div>
                    <div class="col-md-2 d-flex justify-content-center">
                    {{coffeePrice}}
                    </div>
                    <div class="col-md-2 d-flex justify-content-center">
                    {{count}}
                    </div>
                    <div class="col-md-2 d-flex justify-content-center">
                        <script>
                            document.write(totalPrice);
                        </script>
                    </div>
                </div>
                {{/coffeeInfo}}
                <hr>
            </div>
            <div class="">
                <div class="border rounded mb-3">
                    <div class="mt-2 mb-3 d-flex justify-content-center border-bottom">
                        <h5>Карта</h5>
                    </div>
                    <div>
                        <select name="cardSelect" id="cardSelect" class="custom-select">
                            <option value="none">Выберете карту</option>
                            {{#cardInfo}}
                                <option value="{{id}}">{{id}} / {{type}}</option>
                            {{/cardInfo}}
                        </select>
                    </div>
                </div>
                <div class="border rounded">
                    <div class="mt-2 mb-3 d-flex justify-content-center border-bottom">
                        <h5>Адрес</h5>
                    </div>
                    <div>
                        <select name="addrSelect" id="addrSelect" class="custom-select">
                            <option value="none">Выберете адрес</option>
                            {{#addrInfo}}
                                    <option value="{{uid}}">{{basicAddr}} / {{detailAddr}}</option>;
                            {{/addrInfo}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 border rounded d-flex flex-column justify-content-around">
            <div class="mt-2 d-flex justify-content-center border-bottom">
                <h5>Цена</h5>
            </div>
            <div class="row d-flex justify-content-between border-bottom">
                <div class="ml-2">
                    <span>Цена за единицу товара</span>
                </div>
                <div class="mr-4">
                    <strong>{{coffeeInfo.coffeePrice}}</strong>
                </div>
            </div>
            <div class="row d-flex justify-content-between border-bottom">
                <div class="ml-2">
                    <span>Количество</span>
                </div>
                <div class="mr-4">
                    <strong>{{count}}</strong>
                </div>
            </div>
            <div class="row d-flex justify-content-between border-bottom">
                <div class="ml-2">
                    <span>Итого</span>
                </div>
                <div class="mr-4">
                    <strong>
                        <script>
                            document.write(totalPrice);
                        </script>
                    </strong>
                </div>
            </div>
            <div class="row d-flex justify-content-between">
                <div class="col-md-6 p-1">
                    <button class="btn btn-outline-secondary btn-block" id="btn-order">Заказать</button>
                </div>
                <div class="col-md-6 p-1">
                    <button class="btn btn-outline-secondary btn-block" onclick=backLocation()>Отменить заказ</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{>layout/footer}}